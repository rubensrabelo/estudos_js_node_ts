<section class="container-main-title">
    <h1>Edit Task</h1>
</section>

<section class="container-form">
    <form action="/task/edit" method="POST" class="form">
        <section class="container-form-items">
            <input type="hidden" name="id" value="{{task.id}}" class="id">
            
            <section class="container-form-input">
                <label for="title">Title: </label>
                <input type="text" name="title" id="title">
            </section>
            
            <section class="container-form-btn">
                <input type="button" class="btn" value="Edit">
            </section>
        </section>
    </form>
</section>