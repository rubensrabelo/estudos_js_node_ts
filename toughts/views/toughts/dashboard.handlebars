<div class="dashboard">
    <div class="title-container">
        <h2>Dashboard</h2>
        <a href="/toughts/add" class="btn">Add Toughts</a>
    </div>

    <h3>Toughts</h3>

    <ul>
        {{#each toughts}}
        <li>
            <span class="label">{{this.title}}</span>
            <span class="actions">
                <a href="/toughts/edit/{{this.id}}" class="btn">Editar</a>
                <form action="">
                    <input type="hidden" name="id" id="{{this.id}}">
                    <input type="submit" name="Delete" class="btn">
                </form>
            </span>
        </li>
        {{/each}}
    </ul>

    {{#if emptyToughts}}
        <p>There is no thought of yours yet, <a href="/toughts/add">start creating here</a></p>
    {{/if}}
</div>